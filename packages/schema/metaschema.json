{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "products": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "grade": {
                  "type": "number"
                }
              },
              "required": [
                "name",
                "type"
              ]
            }
          }
        }
      }
    }
  }
}
